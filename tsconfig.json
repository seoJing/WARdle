{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "jsx": "react-jsx", // JSX를 사용할 수 있도록 설정
    "outDir": "dist",
    "rootDir": "src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
